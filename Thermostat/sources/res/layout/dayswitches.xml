<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/DayActivityCurrentMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewStyle"
            android:text="" />

        <TextView
            android:id="@+id/DayActivityCurrentTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            style="@style/TextViewStyle"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/DayActivityTextView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        style="@style/TextViewStyle"
        android:text=""
        android:textSize="25sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        style="@style/TextViewStyle"
        android:text="(touch switch to delete)"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/DayActivityswitchesListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewStyle"
        android:layout_weight="65" />

    <Button
        android:id="@+id/DayActivityaddSwitchButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        style="@style/RoundButton"
        android:layout_marginRight="-10dp"
        android:layout_marginLeft="-10dp"
        android:layout_weight="2"
        android:text="ADD" />

</LinearLayout>