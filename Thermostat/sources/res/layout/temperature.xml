<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/TemperatureActivityCurrentMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextViewStyle"
            android:text="" />

        <TextView
            android:id="@+id/TemperatureActivityCurrentTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="3"
        android:gravity="center"
        android:text="Day temperature"
        style="@style/TextViewStyle"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TemperatureActivityTemp1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="6"
        android:gravity="center"
        style="@style/TextViewStyle"
        android:text=""
        android:textSize="70sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="6"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/TemperatureActivityMinus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.5"
            android:textSize="40dp"
            android:text="-"
            style="@style/RoundButton"/>

        <SeekBar
            android:id="@+id/TemperatureActivitySwitcher1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:max="250"
            android:progress="200" />

        <Button
            android:id="@+id/TemperatureActivityPlus1"
            android:text="+"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/RoundButton"
            android:layout_marginRight="10dp"
            android:textSize="40dp"
            android:layout_weight="0.5"
 />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#6699FF" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="3"
        android:gravity="center"
        style="@style/TextViewStyle"
        android:text="Night temperature"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/TemperatureActivityTemp2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="6"
        android:gravity="center"
        android:text=""
        style="@style/TextViewStyle"
        android:textSize="70sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/TemperatureActivityMinus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="40dp"
            style="@style/RoundButton"/>

        <SeekBar
            android:id="@+id/TemperatureActivitySwitcher2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="17"
            android:max="250"
            android:progress="50"
            />

        <Button
            android:id="@+id/TemperatureActivityPlus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="40dp"
            style="@style/RoundButton"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/TemperatureActivityCancel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/RoundButton"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:text="CANCEL" />

        <Button
            android:id="@+id/TemperatureActivityOk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            style="@style/RoundButton"
            android:text="OK" />
    </LinearLayout>

</LinearLayout>